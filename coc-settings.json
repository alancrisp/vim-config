{
    "phpactor.enable": true,
    "phpactor.path": "~/.local/bin/phpactor",
    "phpactor.config": {
        "core.trust": {
            "trust": {
                "~/.config/phpactor": true
            },
            "path": "~/.local/share/phpactor/trust.json"
        }
    },
    "languageserver": {
        "helm": {
            "command": "helm_ls",
            "args": ["serve"],
            "filetypes": ["helm", "helmfile"],
            "rootPatterns": ["Chart.yaml"]
        }
    },
    "yaml.schemas": {
        "kubernetes": "templates/*.yaml"
    }
}
